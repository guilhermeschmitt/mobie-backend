  "scripts": {
    "start": "node scripts/start.js",
    "test": "node scripts/test.js",
    "eslint": "eslint ./src ./test --ext .js",
    "cleardb": "node scripts/cleardb.js"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-3"
    ],
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties"
    ]
  },
  "eslintIgnore": [
    "config/*.js",
    "scripts/*.js",
    "node_modules"
  ],
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 1,
      "semi": [
        1,
        "never"
      ],
      "no-unused-vars": 1,
      "no-multiple-empty-lines": [
        1,
        {
          "max": 1
        }
      ]
    }
  }
